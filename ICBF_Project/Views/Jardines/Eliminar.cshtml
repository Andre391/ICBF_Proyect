@model ICBF_Project.Models.Jardine
@{
    ViewData["Title"] = "Eliminar Jardin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Está seguro de eliminar este Jardin?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">
        <form asp-action="Eliminar" asp-controller="Jardines" method="post">
            <input type="hidden" asp-for="PkIdJardin" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre Jardin</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" readonly />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Direccion">Direccion</label>
                <input class="form-control form-control-sm" asp-for="Direccion" type="text" readonly />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Estado">Estado</label>
                <input class="form-control form-control-sm" asp-for="Estado" type="text" readonly />
            </div>

            <div class="mb-2">
                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-outline-dark btn-sm" asp-action="Index" asp-controller="Jardines">Volver</a>
            </div>
        </form>
    </div>
</div>
