@model ICBF_Project.Models.ViewModels.JardinVM
@{
    @if (Model.oJardin.PkIdJardin == 0)
    {
        ViewData["Title"] = "Crear Jardin";
    }
    else
    {
        ViewData["Title"] = "Editar Jardin";
    }

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oJardin.PkIdJardin == 0)
{
    <h1>Crear Jardin</h1>
}
else
{
    <h1>Editar Jardin</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Jardin_Detalle" asp-controller="Jardines" method="post">
            <input type="hidden" asp-for="oJardin.PkIdJardin" />

            <div class="mb-2">
                <label class="form-label" asp-for="oJardin.Nombre">Nombre Jardin</label>
                <input class="form-control form-control-sm" asp-for="oJardin.Nombre" type="text" />
                <span class="text-danger" asp-validation-for="oJardin.Nombre"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oJardin.Direccion">Direccion</label>
                <input class="form-control form-control-sm" asp-for="oJardin.Direccion" type="text" />
                <span class="text-danger" asp-validation-for="oJardin.Direccion"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oJardin.Estado">Estado</label>
                <select class="form-select form-select-sm" asp-for="oJardin.Estado">
                    <option selected disabled>--Seleccionar--</option>
                    <option value="Aprobado">Aprobado</option>
                    <option value="En Tramite">En Trámite</option>
                    <option value="Negado">Negado</option>
                </select>
                <span class="text-danger" asp-validation-for="oJardin.Estado"></span>
            </div>

            <div class="mb-2">
                @if (Model.oJardin.PkIdJardin == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-outline-dark btn-sm" asp-action="Index" asp-controller="Jardines">Volver</a>
            </div>
        </form>
    </div>
</div>
