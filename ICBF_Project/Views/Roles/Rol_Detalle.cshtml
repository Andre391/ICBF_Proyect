@model ICBF_Project.Models.ViewModels.RolVM
@{
    @if (Model.oRol.PkIdRol == 0)
    {
        ViewData["Title"] = "Crear Rol";
    }
    else
    {
        ViewData["Title"] = "Editar Rol";
    }

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oRol.PkIdRol == 0)
{
    <h1>Crear Rol</h1>
}
else
{
    <h1>Editar Rol</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Rol_Detalle" asp-controller="Roles" method="post">
            <input type="hidden" asp-for="oRol.PkIdRol" />

            <div class="mb-2">
                <label class="form-label" asp-for="oRol.NombreRol">Nombre Rol</label>
                <input class="form-control form-control-sm" asp-for="oRol.NombreRol" type="text" />
                <span class="text-danger" asp-validation-for="oRol.NombreRol"></span>
            </div>

            <div class="mb-2">
                @if (Model.oRol.PkIdRol == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-outline-dark btn-sm" asp-action="Index" asp-controller="Roles">Volver</a>
            </div>
        </form>
    </div>
</div>
