@model ICBF_Project.Models.ViewModels.UsuarioVM
@{
    @if (Model.oUsuario.PkIdUsuario == 0)
    {
        ViewData["Title"] = "Crear Usuario";
    }
    else
    {
        ViewData["Title"] = "Editar Usuario";
    }

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oUsuario.PkIdUsuario == 0)
{
    <h1>Crear Usuario</h1>
}
else
{
    <h1>Editar Usuario</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Usuario_Detalle" asp-controller="Usuarios" method="post">
            <input type="hidden" asp-for="oUsuario.PkIdUsuario" />

            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.NombreUsuario">Nombre Usuario</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.NombreUsuario" type="text" />
                <span class="text-danger" asp-validation-for="oUsuario.NombreUsuario"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Contrasena">Contraseña</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Contrasena" type="text" />
                <span class="text-danger" asp-validation-for="oUsuario.Contrasena"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Nombre">Nombre </label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Nombre" type="text" />
                <span class="text-danger" asp-validation-for="oUsuario.Nombre"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Apellido" type="text" />
                <span class="text-danger" asp-validation-for="oUsuario.Apellido"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Cedula">Cedula</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Cedula" type="text" />
                <span class="text-danger" asp-validation-for="oUsuario.Cedula"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Telefono">Telefono</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Telefono" type="text" />
                <span class="text-danger" asp-validation-for="oUsuario.Telefono"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Direccion">Direccion</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Direccion" type="text" />
                <span class="text-danger" asp-validation-for="oUsuario.Direccion"></span>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Email">Email</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Email" type="email" />
                <span class="text-danger" asp-validation-for="oUsuario.Email"></span>
            </div>
            @if (Model.oUsuario.PkIdUsuario == 0)
            {
                <div class="mb-2">
                    <label class="form-label" asp-for="oUsuario.FechaNacimiento">Fecha Nacimiento</label>
                    <input class="form-control form-control-sm" asp-for="oUsuario.FechaNacimiento" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span class="text-danger" asp-validation-for="oUsuario.FechaNacimiento"></span>
                </div>
            }
            else
            {
                <div class="mb-2">
                    <label class="form-label" asp-for="oUsuario.FechaNacimiento">Fecha Nacimiento</label>
                    <input class="form-control form-control-sm" asp-for="oUsuario.FechaNacimiento" type="date" />
                    <span class="text-danger" asp-validation-for="oUsuario.FechaNacimiento"></span>
                </div>
            }

            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.FkIdRol">Rol</label>
                <select class="form-select form-select-sm" asp-for="oUsuario.FkIdRol" asp-items="@Model.oListaRol">
                    <option selected disabled>--Seleccionar--</option>
                </select>
                <span class="text-danger" asp-validation-for="oUsuario.FkIdRol"></span>
            </div>
            <div class="mb-2">
                @if (Model.oUsuario.PkIdUsuario == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-outline-dark btn-sm" asp-action="Index" asp-controller="Usuarios">Volver</a>
            </div>
        </form>
    </div>
</div>
