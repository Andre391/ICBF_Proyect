@model List<ICBF_Project.Models.Jardine>

@{
    ViewData["Title"] = "Reporte de Jardines No Aprobados";
    Layout = null; 
}

<style>
    h1, h2, table {
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        font-size: 42px;
    }

    table {
        border-collapse: collapse;
        margin: 0 auto;
    }

    td, th {
        border: 1px solid gray;
        padding: 15px;
        font-size: 22px;
        text-align: center;
    }

    table th {
        background-color: #51DCA5;
        color: black;
    }
</style>

<div>
    <h1 >Reporte de Jardines No Aprobados</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre Jardin</th>
            <th>Direccion</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Estado</td>
            </tr>
        }
    </tbody>
</table>