@model List<ICBF_Project.Models.Asistencia>

@{
    ViewData["Title"] = "Reporte de Inasistencia por Enfermedad";
    Layout = null;
}

<!DOCTYPE html>

<style>
    h1, h2, table {
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        font-size: 38px;
    }

    table {
        border-collapse: collapse;
        margin: 0 auto;
    }

    td, th {
        border: 1px solid gray;
        padding: 15px;
        font-size: 22px;
        text-align: center;
    }

    table th {
        background-color: #51DCA5;
        color: black;
    }
</style>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ReportInasistencia</title>
</head>
<body>
    <div>
        <h1>Reporte de Inasistencia por Enfermedad</h1>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>NUIP Niño</th>
                <th>Fecha</th>
                <th>Estado Niño</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.oNino.PkNuip</td>
                    <td>@item.Fecha</td>
                    <td>@item.EstadoNino</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
